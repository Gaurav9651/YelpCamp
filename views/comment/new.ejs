<%- include("../partials/header.ejs") %>

<h1 class="display-5 text-center mt-4">
Create a New Comment  to <%= campground["name"] %>
</h1>
<div class="container mt-3" style="width:30%; min-width:400px">
	<form action='/campgrounds/<%=campground["_id"] %>/comments' method="post">
		<div class="form-group">
			<input type="text" class="form-control" name="comment[title]" placeholder="comment title">
		</div>
		<button class="btn btn-success" style="width:100%;" >
			Submit
		</button>
	</form>
</div>

